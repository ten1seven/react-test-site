# http://EditorConfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.json, *.js, *.html, *.erb, *.scss, *.sass, *.rb]
indent_style = space
indent_size = 2

[*.php, *.py]
indent_style = space
indent_size = 4
